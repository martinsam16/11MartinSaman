<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="martinsam_module_form">
            <field name="name">martinsam_module.persona.form</field>
            <field name="model">martinsam_module.persona</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="nombres"/>
                            <field name="apellidos"/>
                        </group>
                        <group>
                            <field name="fecha_nacimiento"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="martinsam_module_tree">
            <field name="name">martinsam_module.persona.tree</field>
            <field name="model">martinsam_module.persona</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombres"/>
                    <field name="apellidos"/>
                    <field name="fecha_nacimiento"/>
                </tree>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="martinsam_module.action_window">
            <field name="name">Persona</field>
            <field name="res_model">martinsam_module.persona</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
            <record model="ir.actions.server" id="martinsam_module.action_server">
              <field name="name">martinsam_module server</field>
              <field name="model_id" ref="model_martinsam_module_martinsam_module"/>
              <field name="state">code</field>
              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->

        <menuitem name="martinsam" id="martinsam_module_menu_root"/>

        <!-- menu categories -->

        <menuitem name="Persona master" id="martinsam_module.persona_masters" parent="martinsam_module_menu_root"/>
        <!--        <menuitem name="Menu 2" id="martinsam_module.menu_2" parent="martinsam_module.menu_root"/>-->

        <!-- actions -->

        <menuitem name="List" id="martinsam_module.menu_persons_list" parent="martinsam_module.persona_masters"
                  action="martinsam_module.action_window"/>
        <!--            <menuitem name="Server to list" id="martinsam_module" parent="martinsam_module.menu_2"-->
        <!--                      action="martinsam_module.action_server"/>-->

    </data>
</odoo>